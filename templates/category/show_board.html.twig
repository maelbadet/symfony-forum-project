{% extends 'base.html.twig' %}

{% block title %}Détails du board {{ category.name }}{% endblock %}

{% block body %}
    <div class="container-list-board">
        <div class="container-boards">
            <h1>Détails de la catégorie "{{ category.name }}"</h1>

            <ul>
                {% for board in boards %}
                    <li><a href="{{ path('app_board_show_topic', {'id': board.id}) }}">{{ board.name }}</a></li>
                {% endfor %}
            </ul>

            <a class="sign" href="{{ path('app_board_new') }}">Créer un nouveau board</a>
        </div>
    </div>
{% endblock %}
