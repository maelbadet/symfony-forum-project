{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des catégories</h1>

        <ul>
            {% for categories in category %}
                <li><a href="{{ path('app_category_show', {'id': categories.id}) }}">{{ categories.name }}</a></li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
