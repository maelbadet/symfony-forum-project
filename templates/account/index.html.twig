{% extends 'base.html.twig' %}

{% block title %}Informations personnelles{% endblock %}

{% block body %}
    <div class="container">
        <h1>Informations personnelles</h1>

        <form method="post">
            {{ form_start(account_form) }}

            <div class="form-group">
                {{ form_label(account_form.email, 'Email') }}
                {{ form_widget(account_form.email, {'attr': {'class': 'form-control'}, 'value': account_form.vars.data.email}) }}
            </div>

            <div class="form-group">
                {{ form_label(account_form.username, 'Nom d\'utilisateur') }}
                {{ form_widget(account_form.username, {'attr': {'class': 'form-control'}, 'value': account_form.vars.data.username}) }}
            </div>

            <div class="form-group">
                {{ form_label(account_form.newPassword, 'Nouveau mot de passe') }}
                {{ form_widget(account_form.newPassword, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(account_form.verifNewPassword, 'VÃ©rification du nouveau mot de passe') }}
                {{ form_widget(account_form.verifNewPassword, {'attr': {'class': 'form-control'}}) }}
            </div>

            <button type="submit" class="btn btn-primary">Enregistrer</button>

            {{ form_end(account_form) }}
        </form>
    </div>
{% endblock %}
