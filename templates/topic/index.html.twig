{% extends 'base.html.twig' %}

{% block title %}Hello TopicController!{% endblock %}

{% block body %}

<div class="container-list-board">
    <div class="container-boards">
        <h1>Liste des sujets</h1>

        <ul>
            {% for topic in topics %}
                <li>
                    <a href="{{ path('topic_show', {'id': topic.id}) }}">{{ topic.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}

