<div class="container-login">
    <div class="form-container">
        <p class="title">S'inscrire</p>
        <form method="post">
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'form'}}) }}
            <div class="input-group">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="input-group">
                {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group form-check">
                {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'form-check-label'}, 'attr': {'class': 'form-check-input'}}) }}
                <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}"></label>
            </div>

            <button type="submit" class="sign">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </form>
    </div>
</div>